PORT=4000

# Tipo de autenticación: 'windows' para Windows Authentication, 'sql' para usuario/contraseña
SQLSERVER_AUTH=windows

# Nombre del servidor SQL (ej: AZAZYEL o AZAZYEL\\SQLEXPRESS)
SQLSERVER_SERVER=AZAZYEL

# Nombre de la base de datos
SQLSERVER_DATABASE=OUTY_DB

# Solo requeridos si SQLSERVER_AUTH=sql
SQLSERVER_USER=
SQLSERVER_PASSWORD=

# Seguridad de conexión
SQLSERVER_ENCRYPT=false
SQLSERVER_TRUST_SERVER_CERTIFICATE=true

# Seguridad y rendimiento
JWT_SECRET=replace_with_strong_secret
CACHE_TTL_SECONDS=60